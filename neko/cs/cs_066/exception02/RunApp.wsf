<job id="exception02">
<script language="VBScript">
    Option Explicit
	Dim shell
	
	Set shell = CreateObject("WScript.Shell")
	shell.CurrentDirectory = Replace(WScript.ScriptFullName, WScript.ScriptName, "")

	if FileExists("exception02.exe") then
		shell.Run "cmd.exe /k, exception02.exe",1
	elseif FileExists("Debug\exception02.exe") then
		shell.Run "cmd.exe /k, Debug\exception02.exe",1
	elseif FileExists("\bin\Release\exception02.exe") then
		shell.Run "cmd.exe /k, bin\Release\exception02.exe",1
	end if

	Function FolderExists(strFilePath)
		Dim objFileSys
		Set objFileSys = CreateObject("Scripting.FileSystemObject")
		FolderExists = objFileSys.FolderExists(strFilePath)
	End Function

	Function FileExists(strFilePath)
		Dim objFileSys
		Set objFileSys = CreateObject("Scripting.FileSystemObject")
		FileExists = objFileSys.FileExists(strFilePath)
	End Function
</script>
</job>
